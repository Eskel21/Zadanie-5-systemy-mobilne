<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Pole_tekstowe_nazwa">

    <CheckBox
        android:id="@+id/task_item_checkbox"
        style="@style/check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_very_small"
        android:minHeight="48dp"
        android:paddingBottom="15dp"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/task_item_name"
        style="@style/Pole_tekstowe_nazwa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nazwa zadania"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/task_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data zadania"
        style="@style/Pole_tekstowe_data"
        />

    <ImageView
        android:id="@+id/task_item_category_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        tools:srcCompat="@drawable/ic_dom" />
</LinearLayout>