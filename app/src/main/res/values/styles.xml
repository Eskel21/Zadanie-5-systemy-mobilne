<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Zadanie3SystemyMobilne" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/maroon</item>
        <item name="colorAccent">@color/navy</item>

    </style>
    <style name="Pole_tekstowe_nazwa">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/black</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:padding">@dimen/task_item_padding</item>
        <item name="android:layout_marginBottom">11dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="check_box">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/black</item>

        <item name="android:buttonTint">@color/white</item>
        <item name="android:gravity">center_horizontal</item>



    </style>
    <style name="Pole_tekstowe_data">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:padding">@dimen/task_item_padding</item>

    </style>

</resources>